<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative_layout_convert_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_tda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

<!--            <ImageView-->
<!--                android:id="@+id/uns_interview_logo"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:layout_gravity="end"-->
<!--                android:padding="12dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/uns_no_back"-->
<!--                android:visibility="gone" />-->

            <TextView
                android:id="@+id/page_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minWidth="100dp"
                android:text="interview"
                android:textColor="@color/teal_700"
                android:textSize="13sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.pierfrancescosoffritti.youtubeplayer.player.YouTubePlayerView
                android:id="@+id/youtube_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
                />

            <ImageView
                android:id="@+id/interview_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:background="@color/gray"
              />
            <ImageView
                android:id="@+id/uns_interview_logo"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:src="@drawable/uns_no_back" />

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="15dp"
                android:text=" Title of this topic goes here !"
                android:textColor="@color/black"
                android:textSize="22sp" />

<!--            <TextView-->
<!--                android:id="@+id/heading"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingStart="15dp"-->
<!--                android:paddingTop="6dp"-->
<!--                android:paddingEnd="15dp"-->
<!--                android:text="Interview technique intervifb uybubdbuysyu yuiuuds usdiu du sdy d bd "-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="20sp" />-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/desc_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8dp"
                    android:lineHeight="30dp"
                    android:paddingStart="@dimen/_8dp"
                    android:paddingEnd="@dimen/_8dp"
                    android:paddingTop="@dimen/_8dp"
                    android:paddingBottom="100dp"
                    android:text="@string/success_stories"
                    android:textColor="@color/gray_dy"
                    android:textSize="16sp"
                    tools:targetApi="p" />

            </ScrollView>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relative_layout_page_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/myshape_reciever">

            <ProgressBar
                android:id="@+id/progcircle_bar"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateOnly="false"
                android:progress="60"
                android:progressDrawable="@drawable/circle_progerss" />

            <TextView
                android:id="@+id/today_text_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1/10"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="8sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uns_no_back"
            android:textColor="@color/teal_700" />

        <ImageView
            android:id="@+id/share_to_other_app_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/myshape_sender"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_share_24" />

    </LinearLayout>


</RelativeLayout>