<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/th_image_view"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/thought_share" />

        <TextView
            android:id="@+id/th_mo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:text=" Recent posts"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:gravity="end"
            android:textStyle="bold" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/pro_card_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape">

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/appbar_padding_top"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/pro_card_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/hone_ydew"
                app:cardCornerRadius="45dp">

                <ImageView

                    android:id="@+id/mo_image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_person_24" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/username_solution_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/pro_card_solution"
                android:text="muhammad"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/name_solution_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_solution_view"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/pro_card_solution"
                android:text="Md faizan:"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/solution_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_solution_view"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/pro_card_solution"
                android:text="12/04/20021 3:45 pm"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/solution_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/solution_date"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/harp"
                android:maxHeight="400dp"
                android:minHeight="60dp"
                android:padding="8dp"
                android:text="here you will write every thing.....\n In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used as a placeholder before final copy is available."
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:id="@+id/like_Linear_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/solution_text"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/myshape"
                android:backgroundTint="@color/harp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like_image_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="6dp"
                    android:src="@drawable/baseline_thumb_up_black_24dp" />

                <TextView
                    android:id="@+id/like_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="0"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dislike_linear_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/solution_text"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/like_Linear_l"
                android:background="@drawable/myshape"
                android:backgroundTint="@color/harp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dislike_image_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:src="@drawable/user_profile_chat_24" />

                <TextView
                    android:id="@+id/dislike_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="0"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/solution_text"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/love_img_thought"
                android:layout_toLeftOf="@+id/image_view_share"
                android:src="@drawable/ic_baseline_favorite_border_24" />

            <ImageView
                android:id="@+id/image_view_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/solution_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_baseline_share_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>