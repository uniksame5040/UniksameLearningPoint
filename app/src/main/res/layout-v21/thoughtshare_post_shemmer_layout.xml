<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/pro_card_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/pro_card_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/hone_ydew"
                app:cardCornerRadius="45dp">

                <ImageView

                    android:id="@+id/mo_image"
                    android:layout_width="45dp"
                    android:background="@color/dark_gray"
                    android:layout_height="45dp"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/username_solution_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/pro_card_solution"
                android:background="@color/dark_gray"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/name_solution_view"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_solution_view"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:background="@color/dark_gray"
                android:layout_toRightOf="@+id/pro_card_solution"/>

            <TextView
                android:id="@+id/solution_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_solution_view"
                android:layout_margin="4dp"
                android:background="@color/dark_gray"
                android:layout_toRightOf="@+id/pro_card_solution"/>

            <TextView
                android:id="@+id/solution_text"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/solution_date"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/harp"
                android:maxHeight="400dp"
                android:minHeight="60dp"
                android:padding="8dp"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/like_Linear_l"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@+id/solution_text"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/myshape"
                android:backgroundTint="@color/dark_gray"
                android:orientation="horizontal">



            </LinearLayout>

            <LinearLayout
                android:id="@+id/dislike_linear_d"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_below="@id/solution_text"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/like_Linear_l"
                android:background="@drawable/myshape"
                android:backgroundTint="@color/dark_gray"
                android:orientation="horizontal">


            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/solution_text"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:background="@color/dark_gray"
                android:layout_toLeftOf="@+id/image_view_share" />

            <ImageView
                android:id="@+id/image_view_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/solution_text"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:background="@color/dark_gray"
                android:layout_marginEnd="14dp"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>