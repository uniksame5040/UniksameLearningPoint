<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_all_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape">

            <androidx.cardview.widget.CardView
                android:id="@+id/pro_card_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@color/hone_ydew"
                app:cardCornerRadius="45dp">

                <ImageView

                    android:id="@+id/mo_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_person_24" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/username_solution_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/pro_card_solution"
                android:text="User Id"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/name_solution_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_solution_view"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/pro_card_solution"
                android:text="Md faizan:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/solution_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_solution_view"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-condensed-light"
                android:paddingEnd="8dp"
                android:paddingStart="4dp"
                android:text="12/04/20021 3:45 pm"
                android:textSize="12sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>