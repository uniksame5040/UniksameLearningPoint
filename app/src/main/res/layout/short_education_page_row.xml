<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/page_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="100dp"
                android:text="interview"
                android:textColor="@color/teal_700"
                android:textSize="13sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/interview_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/getty" />


            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:padding="15dp"
                android:text="Interview technique intervifb uybubdbuysyu yuiuuds usdiu du sdy d bd "
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/desc_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:lineHeight="30dp"
                android:padding="10dp"
                android:text="@string/respects"
                android:textColor="#5C5C5C"
                android:textSize="18sp"
                tools:targetApi="p" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/i_love_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/myshape_reciever"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_swipe_24" />

            <RelativeLayout
                android:id="@+id/relative_layout_pro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/progcircle_bar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminateOnly="false"
                    android:progress="60"
                    android:progressDrawable="@drawable/circle_progerss" />

                <TextView
                    android:id="@+id/today_text_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1/10"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="8sp" />

            </RelativeLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/myshape_sender"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_swipe_24" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>