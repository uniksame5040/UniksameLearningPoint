<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dashboard_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_dashboard_24" />

        <TextView
            android:id="@+id/dashboard_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/prog_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_plate"
            android:elevation="12dp">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/no_of_approach_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00"
                    android:textColor="@color/teal_700"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/teal_700" />

                <TextView
                    android:id="@+id/weatherDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Your approach\nto the people"
                    android:textColor="@color/teal_700"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/coin_image_view"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/coinss" />


            <TextView
                android:id="@+id/earning_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/coin_image_view"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/teal_700"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/refer_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/earning_view"
                android:layout_marginStart="8dp"
                android:text="Total coins"
                android:textColor="@color/teal_700"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cotes_view"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/refer_text_view"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@+id/relative_layout_pro"
                android:background="@drawable/myshape_like_dislike"
                android:backgroundTint="@color/white"
                android:maxHeight="60dp"
                android:padding="8dp"
                android:text="Are you ready to change and driven people's slow life "
                android:textColor="@color/teal_200"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/relative_layout_pro"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/linear_layout"
                android:layout_alignParentEnd="true">

                <ProgressBar
                    android:id="@+id/progcircle_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminateOnly="false"
                    android:progress="1"
                    android:progressDrawable="@drawable/circle_progerss" />

                <TextView
                    android:id="@+id/today_text_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Today:60%"
                    android:textAlignment="center"
                    android:textColor="@color/teal_700"
                    android:textSize="12sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout_pro"
                android:background="@drawable/myshape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/progress_all_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColor="@color/teal_700"
                    android:text="Active Today" />

                <ProgressBar
                    android:id="@+id/progress_all"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:indeterminateOnly="false"
                    android:progress="5"
                    android:progressDrawable="@drawable/horizontal_progerss" />


                <TextView
                    android:id="@+id/progress_training_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Course"
                    android:textColor="@color/teal_700" />

                <ProgressBar
                    android:id="@+id/progress_training"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:indeterminateOnly="false"
                    android:progress="30"
                    android:progressDrawable="@drawable/horizontal_progerss" />

                <TextView
                    android:id="@+id/progress_quiz_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColor="@color/teal_700"
                    android:text="ThoughtShare Post" />

                <ProgressBar
                    android:id="@+id/progress_post"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="25dp"
                    android:indeterminateOnly="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/horizontal_progerss" />


            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>